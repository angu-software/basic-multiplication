# frozen_string_literal: true

# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

require_relative 'lib/cd_steps'

scheme = 'One Times One'

ENV['FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT'] = '60'

opt_out_usage
default_platform(:ios)

platform :ios do
  before_each do
    set_xcode_version
  end

  lane :dev_stage do
    stage = CD_STAGES[:DEV]

    build_for_testing(stage: stage,
                      scheme: scheme)
    test_without_building(stage: stage,
                          scheme: scheme,
                          test_plan: 'DevelopmentTests')
  end

  lane :acc_stage do
    stage = CD_STAGES[:ACC]

    build_for_testing(stage: stage,
                      scheme: scheme)
    test_without_building(stage: stage,
                          scheme: scheme,
                          test_plan: 'AcceptanceTests')
  end
end
